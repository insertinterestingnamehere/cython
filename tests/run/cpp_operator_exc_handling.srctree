        wrapped_int &operator=(const long long &vao) except +


def assert_raised(f, *args):
    try:
        f(*args)
        raised = False
    except:
        raised = True
    assert raised

def initialization(long long a, long long b):
    cdef wrapped_int w = wrapped_int(a, b)
    return w.val

